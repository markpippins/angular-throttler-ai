{
  "name": "throttler",
  "version": "1.0.0",
  "description": "A web-based file explorer clone that allows you to navigate a virtual file system, inspired by the Windows Explorer interface.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.throttler",
    "productName": "Throttler File Explorer",
    "files": [
      "**/*",
      "!node_modules"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
